<p style="color: green"><%= notice %></p>

<% content_for :title, "Pictures" %>

<h1>Pictures</h1>

<div id="pictures">
  <% @pictures.each do |picture| %>
    <%= "title: #{picture.title}" %>
    <p>
      <%= link_to "Show this picture", picture %>
    </p>
  <% end %>
</div>

<div class="actions mb-3">
  <%= link_to 'New Picture', new_picture_path, class: 'btn btn-success' %>
  <%#— Replace “Generate CSV” download button with an email button —%>
  <%= button_to 'Email CSV to Me',
                email_csv_pictures_path,
                method: :post,
                class: 'btn btn-outline-primary' %>
</div>





